{
  "compilerOptions": {
    "jsx": "react",
    "rootDir": "src",
    "outDir": "build",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
